    rpmlint \
    ShellCheck \
    pykickstart \
    lorax \
    anaconda \
    lorax-lmc-novirt \
    dracut-live \
    kiwi \
    tito \
    xorriso \
    erofs-utils \
    qemu-img \
&& dnf clean all

COPY mock-defaults.cfg /etc/mock/site-defaults.cfg
